<%-include("./partials/head.ejs")%>


<section class="container cajaFormulario">
        
    <article class="formulario">
        <form action="" method="POST" enctype="" id="">
            <div class="logo"><img src="../image/" alt=""></div><i class="far fa-user icono"></i>
            <h5>Registro de usuario</h5>
            <div class="row">
                <div class="col-1"><i class="fas fa-envelope"></i></div>
                <div class="col-11"><input class="form-control" placeholder="Email" name="email" id="">
                </div>
            </div>
            <div class="row">
                <div class="col-1"><i class="fas fa-lock"></i></div>
                <div class="col-11"><input class="form-control " type="password" placeholder="Contraseña" name="password" id="">
                <small class="text-danger"> </small>
                </div>
            </div>
            <div class="row">
                <div class="col-1"><i class="fas fa-lock"></i></div>
                <div class="col-11"><input class="form-control " type="password" placeholder="Repetir contraseña" name="password2" id="">
                    <small class="text-danger"> </small>
                    
                </div>
            </div>
            <h6>Información Personal</h6>
            <div class="row">
                <div class="col-1"><i class="fas fa-user"></i></div>
                <div class="col-11"><input class="form-control" type="text" placeholder="Nombre" name="nombre" id="">
                <small class="text-danger"> </small>
                <div id="errName"></div>
                </div>  
            </div>   
            <div class="row">
                <div class="col-1"><i class="fas fa-user"></i></div>
                <div class="col-11"><input class="form-control " type="text" placeholder="Apellido" name="apellido" id="">
                <small class="text-danger"> </small>
                <div id="errApe"></div>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Registrarse</button>
        </form>

        <p>
            <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            ¿Porque debo registrarme?
            </button>
          </p>
          <div class="collapse" id="collapseExample">
            <div class="card card-body">
            </div>
          </div>
    </article>
</section>